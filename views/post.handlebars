<head>
	<title>Posts</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/lumen/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

	<link href="stylesheets/style.css" rel="stylesheet">

</head>

<body>
	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<div class="row top-30">
				<div class="col-md-1 col-md-offset-10 bufferbutton2">
					<a class="btn btn-default" href="/community">Browse Community</a>
				</div>
			</div>
		</div>
	</nav>

<div class="container">
<div class="row">

<div class="col-md-8 col-md-offset-1 col-sm-2">
	<h1>Posts</h1>
		</div>
		
		<div class="col-md-1 col-md-offset-10">
			<a class="btn btn-default" href="/myposts">My Posts</a>
		</div>


	</div>
	<br>
<div class="row">

	<!-- clears filter, returns results newest to oldest -->
	<div class="col-md-2 col-md-offset-1 col-sm-2 container">
		<br>
		<p>Filter </p>
		<a class="btn btn-default" href="#">Clear All</a>
		<br>

		<br>
		<label for="skillsFilter">Choose a skill:</label>
		<br>
		<select id="skillsFilter">
			<option value="Accounting">Accounting</option>
			<option value="Engineering">Engineering</option>
			<option value="EventPlanning">Event Planning</option>
			<option value="Photography">Photography</option>
			<option value="ProjectManagement">Project Management</option>
			<option value="WebDevelopment">Web Development</option>
			<option value="Writing">Writing</option>
			<option value="GroceryPickup">Grocery Pickup</option>
			<option value="HomeHealthcare">Home Healthcare</option>
			<option value="FurnitureRemovalMoving">Furniture Removal & Moving</option>
			<option value="Landscaping">Landscaping</option>
			<option value="Plumbing">Plumbing</option>
			<option value="GeneralRepair">General Repair</option>
			<option value="Transportation">Transportation</option>
		</select>
		<br>

		<br>
		<label for="locationFilter">Choose a location:</label>
		<br>
		<select id="locationFilter">
			<option value="North">North</option>
			<option value="South">South</option>
			<option value="West">West</option>
			<option value="East">East</option>
		</select>
		<br>
		<br>

		<label for="userEmail">Search Members:</label>
		<input type="email" class="form-control" id="email-input" placeholder="Member">
		<br>

		<label for="postContent">Search by Keyword:</label>
		<input type="text" class="form-control" id="content" placeholder="Keyword">
		<br>

		<button type="submit" class="btn btn-success filter">Filter</button>
		<br>
		<br>
	</div>

<div class="col-md-8 container">
<br>
	{{#each posts}}
	<div class="col-md-10 col-md-offset-1 container">
		<p>Title: {{this.dataValues.title}}</p>
		<p>Content: {{this.dataValues.content}}</p>
		<p>Skills Needed:</p>
		<p>Posted By: </p>

		<button type="submit">Take On Project!</button>
		<br>
		</div>
{{/each}}
	
	</div>
		<br>

	</div>
	</div>
